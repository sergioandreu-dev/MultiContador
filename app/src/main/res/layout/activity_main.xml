<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ResetAll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text2"/>

    <Button
        android:id="@+id/ResetAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9800"
        android:text="Reset All"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Boton1"
        app:layout_constraintLeft_toRightOf="@+id/text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Boton1"
        app:layout_constraintBottom_toTopOf="@+id/text3"/>

    <Button
        android:id="@+id/Boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textColor="#000000"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/Boton2"
        app:layout_constraintLeft_toRightOf="@+id/text2"
        app:layout_constraintRight_toLeftOf="@+id/Reset1"
        app:layout_constraintTop_toBottomOf="@id/ResetAll" />

    <Button
        android:id="@+id/Reset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:textColor="#000000"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/Reset2"
        app:layout_constraintLeft_toRightOf="@+id/Boton1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ResetAll" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Boton2"
        app:layout_constraintBottom_toTopOf="@id/text4"/>

    <Button
        android:id="@+id/Boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:backgroundTint="#4CAF50"
        android:textColor="#000000"
        app:layout_constraintRight_toLeftOf="@+id/Reset2"
        app:layout_constraintLeft_toRightOf="@+id/text3"
        app:layout_constraintTop_toBottomOf="@id/Boton1"
        app:layout_constraintBottom_toTopOf="@id/Boton3"/>

    <Button
        android:id="@+id/Reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:textColor="#000000"
        android:text="Reset"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Boton2"
        app:layout_constraintTop_toBottomOf="@id/Boton1"
        app:layout_constraintBottom_toTopOf="@id/Reset3"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintRight_toLeftOf="@id/Boton3"
        app:layout_constraintBottom_toTopOf="@id/text5"/>

    <Button
        android:id="@+id/Boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:backgroundTint="#4CAF50"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/Boton2"
        app:layout_constraintLeft_toRightOf="@id/text4"
        app:layout_constraintRight_toLeftOf="@id/Reset3"
        app:layout_constraintBottom_toTopOf="@id/Boton4"/>

    <Button
        android:id="@+id/Reset3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:textColor="#000000"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf="@id/Reset2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Boton3"
        app:layout_constraintBottom_toTopOf="@id/Reset4"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text4"
        app:layout_constraintRight_toLeftOf="@id/Boton4"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/Boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textColor="#000000"
        android:text="+1"
        app:layout_constraintTop_toBottomOf="@id/Boton3"
        app:layout_constraintLeft_toRightOf="@id/text5"
        app:layout_constraintRight_toLeftOf="@id/Reset4"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/Reset4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:textColor="#000000"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf="@+id/Reset3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Boton4"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>